{% extends "base.jinja" %}
{% block header %}
    <h1>
        {% block title %}
            My Books
        {% endblock title %}
    </h1>
{% endblock header %}
{% block content %}
    <h2>The Form</h2>
    {% from "_formhelpers.jinja" import render_form %} {{ render_form(form,
     action=url_for('library.index') ) }}
    {% for book in books %}
        <article class="post">
            <header>
                <div>
                    <h1>{{ book['title'] }}: {{ book['subtitle'] }}</h1>
                    by
                    {% for author in book.authors %}
                        {{ author['name'] }}
                        {% if not loop.last %}
                            , {%
                            endif %}
                        {% endfor %}
                        <br />
                        <i>Location: {{ book['location'] }}</i>
                    </div>
                </header>
            </article>
            {% if not loop.last %}<hr />{% endif %}
        {% endfor %}
    {% endblock content %}
