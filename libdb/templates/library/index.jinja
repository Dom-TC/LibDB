{% extends "base.jinja" %}
{% block title %}
    My Books
{% endblock title %}
{% block content %}
    {% from "_formhelpers.jinja" import render_form %}
    {{ render_form(form, action=url_for('library.index') ) }}
    <div class="results">
        <h2>{{ result_count }}</h2>
        <ul>
            {% for book in books %}
                <li>
                    <span class="title">
                        {{ book.title }}
                        {% if book.subtitle %}: {{ book.subtitle }}{% endif %}
                    </span>
                    <br />
                    <span class="author">
                        by
                        {% for author in book.authors %}
                            {{ author['name'] }}
                            {%- if not loop.last -%};{% endif %}
                        {% endfor %}
                    </span>
                    <br />
                    {% if book.location %}<span class="location">{{ book['location'] }}</span>{% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock content %}
